generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Line {
  id       Int      @id @default(autoincrement())
  city     String
  name     String
  order    String
  stations String[]
  entries  Entry[]

  @@unique([city, name])
}

model Entry {
  id        Int      @id @default(autoincrement())
  edits     Int      @default(0)
  updatedAt DateTime @updatedAt
  city      String
  station   String
  comment   String?
  createdAt DateTime @default(now())
  lineId    Int
  lineName  String
  line      Line     @relation(fields: [lineId], references: [id])
}
